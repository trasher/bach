{% block css %}
    {% if min_date is defined and max_date is defined -%}
    <link href="{{ asset('css/jqrangeslider/iThing-min.css') }}" type="text/css" rel="stylesheet" media="screen" />
    {% endif %}
    {% if show_maps -%}
    {% stylesheets
